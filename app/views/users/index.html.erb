<div id="index-view-box" class="container">
  <% @users.each do |user| %>
      <div class="flex-item">

        <div class="ui raised segment">
          <div class="ui card">
            <div class="image">
              <%= image_tag user.avatar.url(:index), class: "creator" %>
            </div>
            <div class="content">
              <a class="header" href="/users/<%= user.id %>">
                <%= user.name %>
              </a>
              <div class="meta">
                <span class="date"><%= user.remember_created_at %> </span>
              </div>
            <!-- keeping this extra content for later use -->
            <div class="extra content">
              <a>
                <i class="user icon"></i>
              </a>
            </div>
          </div>
        </div>
  <% end %>
  </div>
</div>
<br><br>